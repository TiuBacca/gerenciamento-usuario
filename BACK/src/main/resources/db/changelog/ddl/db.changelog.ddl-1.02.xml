<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="db.changelog.ddl-1.02" author="guilherme.baccarin">

        <preConditions>
            <not>
                <tableExists tableName="documento" schemaName="gerenciamento-usuarios"/>
            </not>
        </preConditions>

        <createSequence sequenceName="documento_id_seq" startValue="1" incrementBy="1" schemaName="gerenciamento-usuarios"/>

        <createTable tableName="documento" schemaName="gerenciamento-usuarios">
            <column name="id" type="BIGINT" defaultValue="nextval('gerenciamento-usuarios.documento_id_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="documento" type="VARCHAR(255)" >
                <constraints nullable="false" />
        </column>
        </createTable>

        <addUniqueConstraint schemaName="gerenciamento-usuarios"
                             tableName="documento"
                             columnNames="documento"
                             constraintName="UK_documento_documento"/>
    </changeSet>

</databaseChangeLog>
