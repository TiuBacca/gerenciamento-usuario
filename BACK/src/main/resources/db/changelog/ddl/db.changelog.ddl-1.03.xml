<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">


    <changeSet id="db.changelog.ddl-1.03" author="guilherme.baccarin">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="usuario" schemaName="gerenciamento_usuarios"/>
            </not>
        </preConditions>

        <createSequence sequenceName="usuario_id_seq" startValue="1" incrementBy="1" schemaName="gerenciamento_usuarios"/>

        <createTable tableName="usuario" schemaName="gerenciamento_usuarios">
            <column name="id" type="BIGINT" defaultValue="nextval('gerenciamento_usuarios.usuario_id_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="documento_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="sexo" type="VARCHAR(30)"/>

        </createTable>

        <addForeignKeyConstraint baseTableName="usuario" baseColumnNames="documento_id" baseTableSchemaName="gerenciamento_usuarios"
                                 constraintName="FK_usuario_documento"
                                 referencedTableName="documento" referencedColumnNames="id" referencedTableSchemaName="gerenciamento_usuarios"/>
    </changeSet>

</databaseChangeLog>
